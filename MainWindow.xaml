<Window x:Class="Seeker_Folder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seeker_Folder"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="149*"/>
        </Grid.RowDefinitions>

        <GroupBox BorderThickness="1" Grid.Row="0" Margin="5" Header="Raiz Directorio">

            <StackPanel Orientation="Vertical">
                <Label x:Name="dirName">

                </Label>
                
            </StackPanel>
            
        </GroupBox>
        <Button Grid.Row="1" Content="Seleccionar directorio" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Click="Button_Click" />
    </Grid>
</Window>
